<div class="flex flex-col h-full">
  <h1 class="font-bold text-2xl mb-4"><%= @chat_room.title %></h1>

  <div id="messages" class="flex-grow overflow-y-auto border p-4 mb-4 rounded-lg bg-gray-50">
    <% @chat_messages.each do |message| %>
      <%= render message %>
    <% end %>
  </div>

  <div id="new_message_form">
    <%= render "chat_rooms/message_form", chat_room: @chat_room, chat_message: @chat_message %>
  </div>
</div>