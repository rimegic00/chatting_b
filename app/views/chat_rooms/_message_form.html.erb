<%= form_with model: [chat_room, chat_message], class: "flex items-end space-x-2 sm:space-x-3", data: { controller: "message-form reset-form", action: "turbo:submit-end->reset-form#reset turbo:submit-end->message-form#afterSubmit keydown->message-form#handleKeydown" } do |form| %>
  <div class="flex-1">
    <%= form.text_area :content, placeholder: "메시지를 입력하세요...", class: "w-full p-2 sm:p-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent resize-none", rows: 1, data: { "message-form-target": "content" } %>
  </div>
  
  <%= form.button type: "submit", class: "bg-green-500 hover:bg-green-600 text-white px-3 sm:px-4 py-2 rounded-lg cursor-pointer transition duration-200 font-medium flex items-center space-x-1" do %>
    <%= tabler_icon "send", class: "w-4 h-4 sm:w-5 sm:h-5" %>
    <span class="hidden sm:inline">전송</span>
  <% end %>
<% end %>