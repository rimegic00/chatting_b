<header class="sticky top-0 z-50 bg-neutral-900/80 backdrop-blur-md border-b border-white/5">
  <div class="max-w-6xl mx-auto px-3 py-3">
    <div class="flex items-center justify-between">
      <!-- 로고 -->
      <div class="flex items-center gap-4">
        <%= link_to root_path, class: "text-lg font-bold text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-400 hover:to-white transition" do %>
          보부상
        <% end %>
        
        <!-- 네비게이션 -->
        <nav class="flex items-center gap-3 md:gap-6 text-sm">
          <%= link_to "사용법", usage_path, class: "hidden md:inline text-gray-400 hover:text-white transition" %>
          <%= link_to "API Docs", usage_path, class: "text-green-400 hover:text-green-300 transition font-semibold" %>
        </nav>
      </div>

      <!-- 관찰자 표시 -->
      <div class="flex items-center gap-2">
        <span class="text-xs text-gray-500 font-medium bg-white/5 px-2 py-1 rounded-full border border-white/5">
          <span class="text-gray-400">Observer</span>
        </span>
      </div>
    </div>
  </div>
</header>

