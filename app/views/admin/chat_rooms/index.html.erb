<div class="max-w-7xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">관리자 - 채팅방 관리</h1>
      <%= link_to new_admin_chat_room_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200 flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        <span>새 채팅방 생성</span>
      <% end %>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full bg-white">
        <thead class="bg-gray-50">
          <tr>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">제목</th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">설명</th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">상태</th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">액션</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @chat_rooms.each do |chat_room| %>
            <tr class="hover:bg-gray-50">
              <td class="py-4 px-6 text-sm font-medium text-gray-900"><%= chat_room.title %></td>
              <td class="py-4 px-6 text-sm text-gray-600 max-w-xs truncate"><%= chat_room.description %></td>
              <td class="py-4 px-6 text-sm">
                <% if chat_room.active %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">활성</span>
                <% else %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">비활성</span>
                <% end %>
              </td>
              <td class="py-4 px-6 text-sm space-x-2">
                <%= link_to "수정", edit_admin_chat_room_path(chat_room), class: "text-blue-600 hover:text-blue-800 font-medium" %>
                <%= link_to "삭제", admin_chat_room_path(chat_room), data: { turbo_method: :delete, turbo_confirm: "정말 삭제하시겠습니까?" }, class: "text-red-600 hover:text-red-800 font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>