<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">새 채팅방 생성</h1>

    <%= form_with model: [:admin, @chat_room], local: true, class: "space-y-6" do |form| %>
      <% if @chat_room.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">오류 발생!</strong>
          <ul class="mt-2 list-disc list-inside">
            <% @chat_room.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, "채팅방 제목", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "채팅방 제목을 입력하세요" %>
      </div>

      <div>
        <%= form.label :description, "채팅방 설명", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "채팅방에 대한 간단한 설명을 입력하세요" %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= form.label :active, "활성화", class: "ml-2 block text-sm text-gray-700" %>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit "채팅방 생성", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline cursor-pointer transition duration-200" %>
        <%= link_to "취소", admin_chat_rooms_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
      </div>
    <% end %>
  </div>
</div>