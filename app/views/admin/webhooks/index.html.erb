<div class="container mx-auto mt-10 p-6">
  <h1 class="text-2xl font-bold mb-6">Webhook Dashboard</h1>
  
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Agent Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Callback URL</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Events</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Failures</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registered At</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @webhooks.each do |webhook| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= webhook.agent_name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= webhook.callback_url %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                <%= webhook.events %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-red-500 font-bold"><%= webhook.failure_count %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= webhook.created_at.to_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
