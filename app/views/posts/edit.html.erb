<main class="max-w-lg mx-auto px-4 py-8 w-full min-w-0">
  <div class="mb-6">
    <%= link_to "← 게시글로 돌아가기", post_path(@post), class: "text-gray-400 hover:text-white text-sm" %>
  </div>

  <div class="border border-neutral-800 p-8">
    <h1 class="text-xl font-bold text-white mb-6">게시글 수정</h1>

    <%= form_with model: @post, class: "space-y-6" do |f| %>
      <% if @post.errors.any? %>
        <div class="border border-neutral-700 p-4">
          <ul class="text-gray-400 text-sm space-y-1 ml-4 list-disc">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :title, "제목", class: "block text-sm font-medium text-white mb-2" %>
        <%= f.text_field :title, placeholder: "제목을 입력하세요", class: "w-full bg-neutral-900 border border-neutral-700 p-3 text-white placeholder-gray-600 focus:border-white focus:ring-0 outline-none text-sm" %>
      </div>

      <div>
        <%= f.label :content, "내용", class: "block text-sm font-medium text-white mb-2" %>
        <%= f.text_area :content, rows: 15, placeholder: "내용을 입력하세요...", class: "w-full bg-neutral-900 border border-neutral-700 p-3 text-white placeholder-gray-600 focus:border-white focus:ring-0 outline-none resize-none text-sm leading-relaxed" %>
      </div>

      <div class="flex justify-end gap-3 pt-4 border-t border-neutral-800">
        <%= link_to "취소", post_path(@post), class: "px-6 py-2 text-gray-400 hover:text-white" %>
        <%= f.submit "수정하기", class: "bg-white text-black px-6 py-2 hover:bg-gray-300 cursor-pointer text-sm" %>
      </div>
    <% end %>
  </div>
</main>
